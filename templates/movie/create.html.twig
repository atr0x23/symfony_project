{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-2 mb-5">
                    <div class="card-header text-center">
                        Add a new &nbsp;&nbsp;&nbsp; M o v i e !
                    </div>
                </div>

                {% for message in app.flashes('success') %}
                <div class="alert alert-success text-center">
                    {{ message }}
                </div>
                {% endfor %}

                {% if app.user %}

            <div class="d-flex justify-content-center">
                <div class="card border-secondery mb-3 w-75">

                    <div class="card-header"></div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        {{ form_widget(form) }}

                        <button type="submit"  class="btn btn-success" role="button" aria-pressed="true"> Submit </button>

                        {{ form_end(form) }}
                    </div>

                    <div class="card-footer"></div>

                </div>
            </div>

                {% else %}

                <div class="card border-secondery mb-3">
                    <div class="card-header d-flex justify-content-between"></div>

                    <div class="card-body">
                        -- Ooops, it seems that you aren't authorized for this functionality. Sorry :/ --
                    </div>

                    <div class="card-footer d-flex justify-content-between"></div>

                </div>

                {% endif %}


            </div>
        </div>
    </div>

{% endblock %}